<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_bibleselection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/layout_back"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/pop_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100.0">
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/appicon"
            android:text="CHOOSE YOUR BIBLE"
            android:textStyle="bold"
            android:layout_weight="90"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="5dp"
    android:layout_weight="10">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="true"
            android:padding="5dp"
            android:tint="@color/white"
            android:src="@drawable/appclose" />
</LinearLayout>
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_bible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_asv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/colorPrimaryDark"
            android:text="American Standard-ASV1901" />

        <RadioButton
            android:id="@+id/rb_bbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@color/colorPrimaryDark"
            android:text="Bible in Basic English" />

        <RadioButton
            android:id="@+id/rb_deb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@color/colorPrimaryDark"
            android:text="Darby English Bible" />

        <RadioButton
            android:id="@+id/rb_kjv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:checked="false"
            android:text="King James Version" />

        <RadioButton
            android:id="@+id/rb_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@color/colorPrimaryDark"
            android:text="Webster's Bible"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:checked="false"
            android:text="World English Bible" />

        <RadioButton
            android:id="@+id/rb_ylt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:checked="false"
            android:text="Young's Literal Translation" />

        <RadioButton
            android:id="@+id/rb_nasb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:checked="false"
            android:text="New American Standard" />
    </RadioGroup>
        <!--<ListView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:id="@+id/bibleversion">-->
        <!--</ListView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100.0">

        <Button
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/pop_margin_left"
            android:layout_weight="50.0"
            android:background="@color/colorPrimary"
            android:text="SELECT"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout></RelativeLayout>
