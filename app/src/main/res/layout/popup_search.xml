<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pop_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:elevation="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_back2"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/pop_margin_left"
                android:layout_weight="5.0"
                android:orientation="vertical"
                android:weightSum="100.0">

                <TextView
                    android:id="@+id/search_heading"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Enter a word to search "
                    android:textColor="@color/black"
                    android:textSize="@dimen/headingTextSize" />

                <EditText
                    android:id="@+id/edt_search_word"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_back"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="top"
                android:layout_margin="0dp"
                android:layout_weight="5.0"
                android:orientation="horizontal"
                android:weightSum="100.0">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="50.0"
                    android:background="@color/colorPrimaryDark"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="50.0"
                    android:background="@color/colorPrimaryDark"
                    android:text="CANCEL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>
