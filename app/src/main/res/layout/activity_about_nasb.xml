<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about_nasb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pop_padding"
        android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="100.0">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:tint="@color/white"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@drawable/appclose" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/pop_padding">

            <TextView
                android:id="@+id/aboutnsabcontent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/appicon"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/lockwebsite1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/today"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/aboutnsabcontent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/appicon"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/lockwebsite2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/today"
                android:textSize="@dimen/font_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout></RelativeLayout>
