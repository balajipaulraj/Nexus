<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red1"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollfull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="130.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.0" />

        <TextView
            android:id="@+id/tvBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30.0"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="BookGen"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.0" />

        <TextView
            android:id="@+id/tvChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30.0"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Chapter
 01"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.0" />

        <TextView
            android:id="@+id/tvVerse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30.0"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Verse
 1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="horizontal"
        android:weightSum="100.0">

        <TextView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="50.0"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bookno1"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chapback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bookno1"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50.0"
        android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end">

        <TextView
            android:id="@+id/bookgo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Go"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/chapgo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:background="@drawable/bookno1"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="10dp"
            android:text="Go"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout><LinearLayout
android:orientation="vertical"
android:id="@+id/oldtest"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    </LinearLayout>
        <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
android:layout_marginTop="5dp">
<TextView
    android:textSize="24sp"
    android:textStyle="italic"
    android:textColor="@color/white"
    android:id="@+id/tv_old_testament"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Old Testament" />
</LinearLayout><GridView
android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
android:id="@+id/grid_old_book"
android:padding="10dp"
android:visibility="visible"
android:layout_width="match_parent"
android:layout_height="10dp"
android:stretchMode="columnWidth"
android:columnWidth="100dp"
android:numColumns="auto_fit" /><LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
android:layout_marginTop="5dp">
<TextView
    android:textSize="24sp"
    android:textStyle="italic"
    android:textColor="@color/white"
    android:id="@+id/tv_newtestament"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="New Testament" />
</LinearLayout><GridView
android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
android:id="@+id/grid_new_book"
android:padding="10dp"
android:layout_width="match_parent"
android:layout_height="10dp"
android:stretchMode="columnWidth"
android:columnWidth="100dp"
android:numColumns="auto_fit" /></LinearLayout><ScrollView
android:id="@+id/chap_scroll"
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/grid_chap"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:stretchMode="columnWidth"
        android:columnWidth="100dp"
        android:numColumns="auto_fit" />
</LinearLayout>
</ScrollView><ScrollView
android:id="@+id/verse_scroll"
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/layout_verse_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/grid_verse"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:stretchMode="columnWidth"
        android:columnWidth="100dp"
        android:numColumns="auto_fit" />
</LinearLayout>
</ScrollView></LinearLayout>


