<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pop_font_size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_back"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pop_padding"
        android:paddingTop="@dimen/pop_padding">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100.0">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="FONT SIZE"
    android:textColor="@color/white"
    android:gravity="center"
    android:textSize="@dimen/largeTextSize"
    android:textStyle="bold"
    android:layout_weight="95"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_weight="5"
                android:padding="5dp"
                android:tint="@color/white"
                android:layout_gravity="right"
                android:src="@drawable/appclose" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="For God so loved the world, that He gave His only begotten Son, that whoever believes in Him shall not perish, but have eternal life."
                    android:textSize="10dp" />
            </ScrollView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="5.0"
            android:orientation="horizontal"
            android:weightSum="100.0">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20.0"
                android:padding="10dp"
                android:src="@drawable/minus" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50.0"
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="100.0">

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="50.0"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="50.0"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="RESET"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="10dp"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
